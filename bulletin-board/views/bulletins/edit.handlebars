<div class="bulletin-form">
  <h1>Edit Bulletin</h1>
  <form action="/bulletins/{{bulletin.id}}" method="POST">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="{{bulletin.title}}" required>
    </div>
    <div>
      <label for="content">Content:</label>
      <textarea id="content" name="content" required>{{bulletin.content}}</textarea>
    </div>
    <button class="submit-button" type="submit">Update Bulletin</button>
  </form>
</div>
